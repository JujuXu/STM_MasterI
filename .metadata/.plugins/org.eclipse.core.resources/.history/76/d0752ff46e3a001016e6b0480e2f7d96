/* USER CODE BEGIN Header_StateMachine */
/**
* @brief Function implementing the SM_Task thread.
* @param argument: Not used
* @retval None
*/
/* USER CODE END Header_StateMachine */
void StateMachine(void *argument)
{
  for (;;)
  {
    uint32_t flags = osEventFlagsGet(smEventHandle);

    if (!(flags & 0x0001))
    {
      // LED clignote
      HAL_GPIO_WritePin(LD3_GPIO_Port, LD3_Pin, GPIO_PIN_SET);
      osDelay(50);
      HAL_GPIO_WritePin(LD3_GPIO_Port, LD3_Pin, GPIO_PIN_RESET);
      osDelay(50);

      // Lecture du step de l’encodeur
      int16_t step = encoder_get_steps();

      // Lecture de l’appui sur le bouton
      //bool button = (encoder_button_read() == BUTTON_PRESS);
      bool button = false;

      // Récupération de l’entrée de menu
      const menu_state_t *entry = NULL;
      for (int i = 0; menu_state[i].text != NULL; i++) {
        if (menu_state[i].step == step) {
          entry = &menu_state[i];
          break;
        }
      }

      // Affichage du texte du menu
      if (entry != NULL) {
        clearLCD();
        setCursor(0, 0);
        writeLCD(entry->text);
      }

      // Si bouton pressé : on sort du menu et on lance l’action liée
      if (button && entry != NULL) {
        osEventFlagsClear(smEventHandle, 0x0001);         // sortir du menu
        osEventFlagsSet(smEventHandle, entry->flag);      // lancer l’action
      }
    }
    else {
      osDelay(100);  // ne rien faire si FLAG_MENU actif
    }
  }
}


